/* Normal styles for the modal */
.modal {
	left:50%;
	margin:-250px 0 0 -40%;
	opacity: 0;
	position: fixed;
	top:-50%;
	visibility: hidden;
	width:80%;
	max-height: 80%;
	box-shadow:0 3px 7px rgba(0,0,0,.25);
	color: #262732;
	z-index: 6000;
}
	/* Make the modal appear when targeted */
	.modal:target {
		opacity: 1;
		top:50%;
		visibility: visible;
	}

.modal .modal-header,.modal .modal-footer {
	border-bottom: 1px solid #e7e7e7;
	border-radius: 5px 5px 0 0;
}
	.modal .modal-footer {
		border:none;
		border-top: 1px solid #e7e7e7;
		border-radius: 0 0 5px 5px;
		position: relative;
	}
.modal h3, .modal .modal-copy h4 {
	margin:0;
}

.modal .modal-copy,.modal .modal-header, .modal .modal-footer {
	padding:15px;
}
.modal-content {
	background: #f7f7f7;
	position: relative;
	z-index: 6020;
	border-radius:5px;
}

.modal-copy {
	max-height: 350px;
	overflow: auto;
}

.modal .overlay {
	background-color: #000;
	background: rgba(0,0,0,.5);
	height: 100%;
	left: 0;
	position: fixed;
	top: 0;
	width: 100%;
	z-index: 6010;
}